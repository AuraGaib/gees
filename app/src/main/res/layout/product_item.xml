<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/namaProdukDagangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produk Gees Productions"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />
        <ImageView
            android:id="@+id/product_image"
            android:layout_below="@+id/namaProduk"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:id="@+id/produkDeskripsi"
            android:text="Product Descriptiom"
            android:textAlignment="center"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/produkDeskripsi"
            android:id="@+id/produkHarga"
            android:text="Harga Produk"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>